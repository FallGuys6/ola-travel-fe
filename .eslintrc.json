{
    "ignorePatterns": [
        "public",
        "dist",
        "tests",
        "test",
        "coverage",
        "*.md",
        "*.png",
        "*.svg",
        "*.json",
        "*.map",
        "*.sh"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
        "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "plugins": [
        "react"
    ],
    "env": {
        "es6": true
    },
    "rules": {
        "react/jsx-no-bind": "off",
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "error"
    }
}